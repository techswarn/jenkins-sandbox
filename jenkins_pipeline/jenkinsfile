pipeline {
    agent any

    parameters {
        booleanParam( name: "RELEASE", defaultValue: false, description: "Is this a release canditate?" )
    }

    environment {
        RELEASE_VERSION = "1.0.0"
        INT_VERSION = "R2" 
    }

    stages {
        stage('Audit Tools') {
            steps {
                sh '''
                    git --version
                    node --version
                    npm --version
                '''
            }
        }

        stage('Unit test') {
            steps {
                sh '''
                    echo "Unit test passed"
                '''
            }
        }

        stage('Perform build') {
            steps {
                sh '''
                    echo "Perform audit here"
                    npm run build
                '''
            }
        }

        stage('Publish') {
            steps {
                sh '''
                    echo "Perform audit here"
                '''
            }
        }

    }

    post {
        success {
            echo "success"
        }

        failure {
            echo "failure"
        }
    }
}